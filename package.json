{
  "name": "to-inches",
  "version": "1.0.2",
  "description": "Convert metric to imperial measurements with fractions",
  "main": "dist/to-inches.js",
  "types": "dist/to-inches.d.ts",
  "scripts": {
    "build:js": "rm -rf ./dist && esbuild src/to-inches.ts --bundle --platform=neutral --outdir=dist",
    "build:types": "tsc --declaration --emitDeclarationOnly && api-extractor run --local && mv ./dist.tmp/index.d.ts ./dist/to-inches.d.ts && rm -rf ./dist.tmp",
    "build": "npm run build:js && npm run build:types",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Liksu/to-inches.git"
  },
  "keywords": [
    "mm-to-inches",
    "mm",
    "cm",
    "km",
    "millimeter",
    "centimeter",
    "millimeter",
    "inch",
    "inches",
    "foot",
    "feet",
    "yard",
    "yards",
    "mile",
    "miles",
    "convert",
    "fraction",
    "format"
  ],
  "author": "Petro Borshchahivskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Liksu/to-inches/issues"
  },
  "homepage": "https://github.com/Liksu/to-inches#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@microsoft/api-extractor": "^7.47.0",
    "esbuild": "0.23.0",
    "ts-jest": "^29.2.2",
    "typescript": "^5.5.3"
  }
}
